<% layout('./layouts/layout') %>

<!-- A content heading -->
<h1><%= title %></h1>

<!-- A message -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form class="addInvForm" method="POST" action="/inv/add-inventory">
  <div><i>All required</i></div>

  <label for="classificationList">Classification:</label>
  <%- optionsList %>

  <label for="inv_make">Make:
    <input type="text" name="inv_make" pattern="[a-zA-Z]{3,}" placeholder="Min of 3 characters" id="inv_make" value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>" required>
  </label>

  <label for="inv_model">Model:
    <input type="text" name="inv_model" pattern="[a-zA-Z]{3,}" placeholder="Min of 3 characters" id="inv_model" value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>" required>
  </label>

  <label for="inv_description">Description:
    <textarea name="inv_description" rows="4" cols="50" placeholder="Enter the description..." id="inv_description" required><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>
  </label>

  <label for="inv_image">Image Path:
    <input type="text" name="inv_image" placeholder="/images/vehicles/imagename.png" id="inv_image" value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>" required>
  </label>

  <label for="inv_thumbnail">Thumbnail Path:
    <input type="text" name="inv_thumbnail" placeholder="/images/vehicles/imagename.png" id="inv_thumbnail" value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>" required>
  </label>

  <label for="inv_price">Price:
    <input type="number" name="inv_price" step="1" id="inv_price" value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>" required placeholder="Decimal or integer">
  </label>

  <label for="inv_year">Year:
    <input type="text" name="inv_year" pattern="\d{4}" maxlength="4" minlength="4" id="inv_year" value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>" required placeholder="4-digit year">
  </label>

  <label for="inv_miles">Miles:
    <input type="number" name="inv_miles" step="1" id="inv_miles" value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>" required placeholder="Digits only">
  </label>

  <label for="inv_color">Color:
    <input type="text" name="inv_color" id="inv_color" value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>" required>
  </label>

  <input type="submit" value="Add Vehicle">
</form>
