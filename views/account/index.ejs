<!-- A content heading -->
<% if (title) { %>
  <h1><%= title %></h1>
<% } else { %>
  <h1>Dashboard</h1>
<% } %>

<% if (accountData.account_type === "Admin" || accountData.account_type === "Employee") { %>
  <h1>Welcome <%- accountData.account_type %></h1>
  <p><%= title %></p>
  <a title="Edit Account" href="/account/update" id="<%- accountData.account_id %>">Edit account information</a>

  <h2>Inventory Management</h2>
  <ul>
    <li><a title="Link to inventory" href="/inv/">Manage Inventory</a></li>
    <li><a title="Link to classification" href="/inv/classification">Manage Classifications</a></li>
  </ul>
<% } else { %>
  <h1>Welcome <%- accountData.account_type %></h1>
  <p><%= title %></p>
  <a title="Edit Account" href="/account/update" id="<%- accountData.account_id %>">Edit account information</a>
<% } %>

<!-- A message -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>
