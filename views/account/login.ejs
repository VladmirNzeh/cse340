<!-- A content heading -->
<% if (title) { %>
  <h1><%= title %></h1>
<% } else { %>
  <h1>Account Login</h1>
<% } %>

<!-- A message -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form class="loginForm" method="post" action="/account/login">
  <label for="account_email">
    Email:
    <input
      type="email"
      name="account_email"
      id="account_email"
      required
      value="<%= typeof account_email !== 'undefined' ? account_email : '' %>"
      placeholder="john89@gmail.com"
    >
  </label>

  <label for="account_password">
    Password:
    <input
      type="password"
      name="account_password"
      id="account_password"
      required
      placeholder="Enter your password"
    >
  </label>

  <input type="submit" value="Login">

  <div>
    <i>Passwords must be at least 6 characters for testing. You can re-enable stricter rules later.</i>
  </div>

  <p>Don't have an account? <a href="/account/register">Sign-up</a></p>
</form>
